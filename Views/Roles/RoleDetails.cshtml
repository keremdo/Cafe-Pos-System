@{
    Layout = "_Layout";
}
@model AppRole

<h2>Edit Role</h2>
<hr>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="mb-3">
        <label asp-for="Name">Yetki - Ünvan</label>
        <input asp-for="Name" class="form-control" disabled>
    </div>
</form>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim Soyisim</th>
            <th>E Posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in ViewBag.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="User" asp-action="UserEdit" asp-route-id="@user.Id" class=" btn btn-primary">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>