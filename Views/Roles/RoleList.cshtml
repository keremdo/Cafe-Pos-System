@{
    Layout = "_Layout";
}
@model IEnumerable<AppRole>
<a asp-action="RoleCreate" class="btn btn-primary">Yetki - Ünvan Ekle</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Yetki</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-danger">Girilmiş Yetki Yok</td></tr>
        }
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="RoleDelete" method="post" onsubmit="return confirm('@role.Name Kalıcı Olarak Silinecek Emin Misiniz?')">
                        <a asp-action ="RoleDetails" asp-route-id="@role.Id" class="btn btn-success">Detay</a>
                        <button type="submit" class="btn btn-danger" name="Id" value="@role.Id">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
