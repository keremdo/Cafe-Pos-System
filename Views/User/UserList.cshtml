@{
    Layout = "_Layout";
}
@model IEnumerable<AppUser>
<a asp-action="UserCreate" class="btn btn-primary">Kullanıcı Ekle</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim Soyisim</th>
            <th>E Posta</th>
            <th>Kullanıcı Kimliği</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.MandantID</td>
                <td>
                    <a asp-controller="User" asp-action="UserEdit" asp-route-id="@user.Id" class=" btn btn-primary">Güncelle</a>
                    <form asp-controller="User" asp-action="UserDelete" method="post" onsubmit="return confirm('@user.FullName Kalıcı Olarak Silinecek Emin Misiniz?')" style="display: inline-block;">
                        <input type="hidden" name="Id" value="@user.Id">
                        <button type="submit" class=" btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>